<odoo>
    <record id="view_student_form" model="ir.ui.view">
        <field name="name">my_student.student.form</field>
        <field name="model">my_student.student</field>
        <field name="arch" type="xml">
            <form string="Ikaslea">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_student_list" model="ir.ui.view">
        <field name="name">my_student.student.list</field>
        <field name="model">my_student.student</field>
        <field name="arch" type="xml">
            <list string="Ikasleak">
                <field name="name"/>
                <field name="user_id"/>
            </list>
        </field>
    </record>

    <menuitem id="menu_student_root" name="Ikasleak"/>
    <menuitem id="menu_student" name="Ikasleak" parent="menu_student_root" action="action_student"/>
    
    <record id="action_student" model="ir.actions.act_window">
        <field name="name">Ikasleak</field>
        <field name="res_model">my_student.student</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
