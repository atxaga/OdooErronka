<odoo>
    <!-- Taldea: Ikasle -->
    <record id="group_student" model="res.groups">
        <field name="name">Ikasle</field>
    </record>

    <!-- Record rule: ikasle bakoitzak bere datuak soilik ikus ditzan -->
    <record id="student_own_rule" model="ir.rule">
        <field name="name">Ikasleak bere datuak bakarrik ikusi</field>
        <field name="model_id" ref="base.model_res_users"/>
        <field name="domain_force">[('user_id','=',user.id)]</field>
        <field name="groups" eval="[(4, ref('group_student'))]"/>
    </record>

    <!-- Kontuan izan: event_own_rule kenduta dago -->
</odoo>
