<odoo>
    <record id="group_student" model="res.groups">
        <field name="name">Ikasle</field>
        <field name="category_id" ref="base.module_category_hidden"/>
    </record>

    <!-- Record rule: ikasle bakoitzak bere datuak soilik ikus ditzan -->
    <record id="student_own_rule" model="ir.rule">
        <field name="name">Ikasleak bere datuak bakarrik ikusi</field>
        <field name="model_id" ref="model_my_student_student"/>
        <field name="domain_force">[('user_id','=',user.id)]</field>
        <field name="groups" eval="[(4, ref('group_student'))]"/>
    </record>

    <record id="event_own_rule" model="ir.rule">
        <field name="name">Ikasleak bere ekintzak soilik ikusi</field>
        <field name="model_id" ref="calendar.model_calendar_event"/>
        <field name="domain_force">[('student_id.user_id','=',user.id)]</field>
        <field name="groups" eval="[(4, ref('group_student'))]"/>
    </record>
</odoo>
 